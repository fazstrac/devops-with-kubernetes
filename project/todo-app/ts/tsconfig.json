{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2020",
    "moduleResolution": "node",
    "lib": ["dom", "es2017"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "rootDir": "./",
    "outDir": "../static",
    "types": ["vitest/globals", "node"]
  },
  "include": ["**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules"]
}
