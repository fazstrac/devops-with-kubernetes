{
  "name": "project-todo-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Todo frontend for DevOps with Kubernetes project (TypeScript)",
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/user-event": "^14.6.1",
    "@vitest/browser-playwright": "^4.0.4",
    "esbuild": "^0.25.11",
    "eslint": "^9.38.0",
    "jsdom": "^22.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.4"
  },
  "scripts": {
    "build": "esbuild ts/main.ts --bundle --platform=browser --target=es2017 --outfile=static/frontend.js --minify",
    "typecheck": "tsc -p ts/tsconfig.json --noEmit",
    "eslint": "eslint . --ext .ts,.tsx",
    "test": "vitest run",
    "test:ui": "vitest",
    "test:browser": "vitest --config=vitest.browser.config.ts"
  }
}
